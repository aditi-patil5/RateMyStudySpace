<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".ui.space.SpaceFragment">

        <TextView
            android:id="@+id/title_space"
            android:layout_width="343dp"
            android:layout_height="46dp"
            android:text="Name"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.514"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.075" />

    <ImageView
        android:id="@+id/image_space"
        android:layout_width="346dp"
        android:layout_height="257dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/lind_hall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_space" />

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="338dp"
        android:layout_height="53dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_space" />

    <TextView
        android:id="@+id/location_space"
        android:layout_width="337dp"
        android:layout_height="75dp"
        android:layout_marginTop="40dp"
        android:text="Location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_bar" />
    </androidx.constraintlayout.widget.ConstraintLayout>

